//- layouts/layout.pug
extend layouts/_layout6.pug

block title
    | VOLTA - Blog

block canvas
    canvas#volta(data-color='605c65')

block content

    include partials/headers/_header-blog

    section.section-filter
        .container
            .row.justify-content-center
                .col-md-8
                    ul.ul-filter
                        li
                            a(href='#' title='').active Новости
                        li
                            a(href='#' title='') Обзоры
                        li
                            a(href='#' title='') Мнения
                        li
                            a(href='#' title='') Анонсы
                        li
                            a(href='#' title='') События
                .col-md-2
                    a(href='#' title='').link-all Все



    section.section-blog
        .container
            .row.justify-content-center
                .offset-lg-2.col-lg-10
                    .row.grid
                        - for(var i = 0; i < 6; i++)
                            +blog('Lifeprint - принтер, печатающий видео','Создатели хоррор-игры Outlast 2 разработали специальные трусы-подгузники, призванные спасти чувство собственного достоинства и любимое нижнее белье от риска быть испачканным во время жутких и неожиданных игровых сцен')


    include partials/_pagination
