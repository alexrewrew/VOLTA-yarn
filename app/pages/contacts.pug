//- layouts/layout.pug
extend layouts/_layout8.pug

block title
    | VOLTA - Contacts


block canvas
    //canvas#volta(data-color='7521E1')


block content

    include partials/headers/_header-contacts

    section
        .container-fluid
            .row
                .col-12
                    .link-hire
                        .link-hire--step
                            form.form-hire
                                .select-group.select-group-noarrow.error
                                    select.chosen-select(data-placeholder='What can we help you with?')
                                        option
                                        option Web design & Development
                                        option Branding & identity development
                                        option Marketing & analyst
                                        option Mobile app development
                                input(type='text' placeholder='Your name').error
                                input(type='mail' placeholder='Enter your e-mail')
                                textarea(placeholder='A brief intro to your project').error
                                .form-submit
                                    button(type='submit')
                                        span send
                                        include svgs/send.svg
                        .link-hire--step
                            .link-hire--text
                                img(src='img/icons/mail.svg' title='')
                                h3 Thanks for your message!
                                    br
                                    | We will respond soon

                        .link-hire--close



