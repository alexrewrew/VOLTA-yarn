@import '../../utilities/vars'
@import '../../utilities/mixins'

ul, ol
  padding 0
  margin 0
  li
    font-family $m-font, sans-serif
    list-style none


.ul-clients
  display flex
  flex-wrap wrap
  justify-content center
  align-items center
  padding $s43 0 $s25
  +xxl()
    padding-top 3.563rem
    padding-bottom 0
  li
    flex 1 1 20%
    max-width 20%
    text-align center
    margin-bottom $s24
    +tab()
      flex 1 1 25%
      max-width 25%
    +port()
      flex 1 1 33.33333%
      max-width 33.33333%
    +mob()
      flex 1 1 50%
      max-width 50%
      padding 0 $s15
    +land()
      flex 1 1 33.33333%
      max-width 33.33333%
    +xxl()
      margin-bottom $s34
    img
      max-width 100%
      +port()
        max-width: 85%;

.ul-filter
  display flex
  flex-wrap wrap
  li
    margin-right $s40
    +port()
      margin-right $s30
      margin-bottom $s8
    +mob()
      margin-right $s26
      margin-bottom $s15
    a
      font-size $f18
      color $white
      display inline-block
      padding: $s3 0 $s6;
      position relative
      +mob()
        font-size: 1.125em;
      &:after
        pseudo(block, absolute)
        height 3px
        bottom 0
        left 0
        right 0
        background $pink-darker
        width 0
        trans()
      &:hover
        &:after
          width 100%
      +retinanon()
        font-weight 300
    .active
      &:after
        width 100%
