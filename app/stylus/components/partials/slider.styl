@import '../../utilities/vars'
@import '../../utilities/mixins'

.slick-loading .slick-list
  background: #fff url('../img/slick/ajax-loader.gif') center center no-repeat;

@font-face
  font-family: 'slick';
  font-weight: normal;
  font-style: normal;
  src: url('../fonts/slick/slick.eot');
  src: url('../fonts/slick/slick.eot?#iefix') format('embedded-opentype'), url('../fonts/slick/slick.woff') format('woff'), url('../fonts/slick/slick.ttf') format('truetype'), url('../fonts/slick/slick.svg#slick') format('svg');

.slider
  padding-bottom 3.750rem
  +mobile()
    padding-bottom 0
  .arrow
    position absolute
    z-index 100
    height 37px
    width 21px
    bottom -35px
    cursor pointer
    font-size $f50
    color $gray
    display flex
    align-items center
    justify-content center
    trans()
    +mobile()
      top: 100px;
      bottom 0
    &:hover
      opacity .5

  .arrow.left
    left 0
    +mobile()
      right calc(23% + 48px)
      left auto
  .arrow.right
    left 48px
    +mobile()
      right 6%
      left auto
  .slide
    padding-top $s19
    +mobile()
      padding-top $s5
    h3
      +mobile()
        margin-bottom 6.875rem
        max-width: 82%;
        height 48px
    &:focus
      outline none

.slider-counter
  position absolute
  z-index 100
  left 15px
  bottom -17px
  padding $s8 0
  font-family $sl-font, $s-font, sans-serif
  font-size 8.625em
  font-weight 700
  color: $purple-text;
  +portrait()
    left auto
    right 15px
  +mobile()
    font-size: 7.5em;
    left: auto;
    right: 6%
    bottom: -100px;
    z-index -1
  +landscape()
    right 13%

.slider.slick-dotted.slick-slider
  margin-bottom $s30