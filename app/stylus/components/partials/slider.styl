@import '../../utilities/vars'
@import '../../utilities/mixins'

.slick-loading .slick-list
  background: #fff url('../img/slick/ajax-loader.gif') center center no-repeat;

@font-face
  font-family: 'slick';
  font-weight: normal;
  font-style: normal;
  src: url('../fonts/slick/slick.eot');
  src: url('../fonts/slick/slick.eot?#iefix') format('embedded-opentype'), url('../fonts/slick/slick.woff') format('woff'), url('../fonts/slick/slick.ttf') format('truetype'), url('../fonts/slick/slick.svg#slick') format('svg');

.slider
  padding-bottom 60px
  .arrow
    position absolute
    z-index 100
    height 37px
    width 21px
    bottom -35px
    cursor pointer
    font-size $s50
    color $gray
    display flex
    align-items center
    justify-content center
    trans()
    &:hover
      opacity .5
  .arrow.left
    left 0
  .arrow.right
    left 48px
  .slide
    padding-top 19px
    &:focus
      outline none

.slider-counter
  position absolute
  z-index 100
  left 15px
  bottom -17px
  padding 8px 0
  font-family $sl-font, $s-font, sans-serif
  font-size 8.625em
  font-weight 700
  color: $purple-text;
  +portrait()
    left auto
    right 15px

.slider.slick-dotted.slick-slider
  margin-bottom $s30

.slider-two, .slider-three
  margin 0 -15px
  .slide
    margin 0 15px
    overflow hidden
