.grid
  justify-content space-around
  +cmin(992px)
    flex-direction: column;
    justify-content flex-start
    max-height: 103vw

  +xxl()
    max-height: 90vw

  +tab()
    max-height: 125vw;

.grid.grid-small
  +cmin(992px)
    max-height 52vw



.grid-item
  +cmin(992px)
    &:nth-child(even)
      order 2
    &:nth-child(odd)
      order 1
