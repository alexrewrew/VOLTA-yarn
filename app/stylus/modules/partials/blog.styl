.blog
  display block
  position relative
  z-index 30
  padding-bottom 5.063rem
  margin-bottom $s47
  +mob()
    max-width 460px
    mcenter()
    padding-bottom 3.438rem
    margin-bottom 7.563rem
  &--image
    height 201px
    display flex
    align-items center
    justify-content center
    overflow hidden
    +tab()
      height: 162px;
    +cmax(992px)
      height: auto
    +xxl()
      height 272px
    img
      height 100%
      +mob()
        height auto
        width 100%
  &--text
    padding: $s37 $s15 0
    +mob()
      padding $s33 0
    +xxl()
      padding $s48 0 0
    h3
      position relative
      left -70px
      width calc(100% + 70px)
      margin-bottom $s28
      +mob()
        position static
        width auto
      +xxl()
        margin-bottom $s28
        left -78px
        width calc(100% + 78px)
    p
      margin-bottom $s22
  &--date
    display flex
    padding 0 $s15
    +mob()
      padding 0
    +xxl()
      padding 0
    li
      color $lemon-darker
      font-family $sl-font, $s-font, sans-serif
      display flex
      font-size: $f12
      font-weight: 500;
      margin-right $s35
      +retinanon()
        font-weight 400
      svg
        margin-right $s10
      +xxl()
        font-size $f14
  &:after
    pseudo(block, absolute)
    background $lemon-dark
    top 101px
    bottom 0
    left -15px
    right -15px
    z-index -1
    height 0
    trans()
    +port()
      height calc(100% - 101px)
    +mob()
      height calc(100% - 101px)
      left -15px
      right -15px
    +land()
      left -30px
      right -30px
    +xxl()
      left -30px
      right -30px
  .link-more
    opacity 0
    +port()
      opacity 1
    +mob()
      opacity 1
      right 5px
      bottom 38px
    &:after
      width 0
      +port()
        width 100%
      +mob()
        width 100%
        bottom 0
        top auto
  &:hover
    .link-more
      opacity 1
      &:after
        width 100%
    &:after
      height calc(100% - 101px)
