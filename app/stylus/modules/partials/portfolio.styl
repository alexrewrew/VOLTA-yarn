.portfolio
  display block
  position relative
  z-index 30
  margin-bottom 131px
  padding-bottom: 99px;
  height 439px
  +portrait()
    margin-bottom 150px
  +mobile()
    margin-bottom 102px
  h3
    margin-bottom $s48
    +mobile()
      margin-bottom $s30
  &--viewport
    position absolute
    top: 52px;
    left: 4.6%;
    right: 18.2%;
    bottom: 0;
    overflow hidden
    z-index -1
    trans()
    &-image
      position: absolute;
      left: 61px;
      top: -101px;
      trans()
    +portrait()
      right 4.6%
    +mobile()
      left 0
      right 0
      top: 36px;
  &--image
    position absolute
    top: -9px;
    left: 43px;
    max-width 100%
    trans()
    +tablet()
      left 0
    +portrait()
      position static
      display block
      height 340px
      mcenter()
    +mobile()
      position static
      width auto
      max-height 222px
      mcenter()
      display block
      margin-top $s25
  &-marker
    color $white
    font-size $f20
    font-family $sl-font, $s-font, sans-serif
    position absolute
    right 15px
    bottom -208px
    +portrait()
      bottom 25px
    +mobile()
      left 30px
      bottom -280px


  +mobile()
    .col-left
      order 2
    .col-right
      order 1

  &:hover
    .portfolio--image
      transform translate3d(0, 60px, 0)
      +portrait()
        transform translate3d(0, -60px, 0)
      +mobile()
        transform none
    .portfolio--viewport
      left 0
      right 0
      top -100px
      bottom -60px
      +portrait()
        top -70px
      +mobile()
        top: 36px;
        bottom 0
    .portfolio--viewport-image
      transform translate3d(120px, 0 0)
      +mobile()
        transform translate3d(20px, 0 0)
    .link-inner
      letter-spacing 3px

.portfolio.portfolio-left
  .col-left
    order 2
    +portrait()
      order 1
  .col-right
    order 1
    +portrait()
      order 2
  .portfolio--viewport
    right: 4.6%
    left: 18.2%;
    +portrait()
      left 4.6%
    +mobile()
      left 0
      right 0
  .portfolio--viewport-image
    left auto
    right: 228px;
    top -147px
  .portfolio--image
    left auto
    right 43px
    +tablet()
      right 0
  .portfolio-marker
    left 15px
    right auto
    +portrait()
      left auto
      right 15px
    +mobile()
      left 30px
      right auto
  &:hover
    .portfolio--viewport
      left 0
      right 0