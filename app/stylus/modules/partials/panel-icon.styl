.panel-icon
  position fixed
  left 0
  top 46.87%
  padding-left $s15
  display flex
  flex-direction column
  +mobile()
    display none
  li
    margin-bottom $s25
    a
      display block
      svg
        g
          fill $purple
          trans()
      &:hover
        svg g
          fill $pink

.panel-icon-right
  left: auto
  right 0
  padding-left 0
  padding-right $s15