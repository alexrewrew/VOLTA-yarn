.body-lemon
  .wrapper
    background $lemon
  .panel-icon li
    a
      svg g
        fill $lemon
      &:hover
        svg g
          fill $pink
  .link-logo
    svg g
      fill $lemon
    &:hover
      svg g
        fill $pink
  .menu li a
    color $lemon
    &:hover
      color $pink
  .footer-copyright
    color $lemon
  .link-arrow
    svg g
      fill $lemon
    &:hover
      svg g
        fill $pink
  +mobile()
    nav
      background $lemon
    .link-logo
      svg g
        fill $white

  .menu-social li a
    svg g
      fill $lemon
    &:hover
      svg g
        fill $pink

  .blog:after
    background $lemon-dark

  .blog--date li
    color: $lemon-darker
    svg g
      fill $lemon-darker
