.body-lemon

  #preloader-load {
    background: #fff url('../img/logo/volta-logo5.svg') center center no-repeat;
    background-size: 197px
  }
  
  .wrapper
    background $lemon
    
  .panel-icon li a svg g, .link-logo svg g, .link-arrow svg g, .menu-social li a svg g
    fill $lemon

  .panel-icon li a, .link-logo, .link-arrow, .menu-social li a
    &:hover
      svg g
        fill $pink

  .menu li a, .footer-copyright
    color $lemon

  .menu li a:hover
    color $pink
    
  +mobile()
    nav
      background $lemon
    .link-logo
      svg g
        fill $white

  .blog:after
    background $lemon-dark

  .blog--date li
    color: $lemon-darker
    svg g
      fill $lemon-darker

  .select-lang
    .chosen-container .chosen-single span, .chosen-container-single .chosen-drop .chosen-results .active-result
      color $lemon
    .chosen-container-single .chosen-drop .chosen-results .active-result.highlighted
      color $pink
    .chosen-container:after
      triangle($lemon, down, 5px)

body.no-canvas.body-lemon
  +displays()
    .wrapper
      background $lemon !important