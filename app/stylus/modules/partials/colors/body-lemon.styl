.body-lemon

  #preloader-load {
    display: block;
    position: fixed;
    z-index: 99999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #fff url('../img/logo/volta-logo5.svg') center center no-repeat;
    background-size: 197px
  }
  
  .wrapper
    background $lemon
    
  .panel-icon li a svg g, .link-logo svg g, .link-arrow svg g, .menu-social li a svg g
    fill $lemon

  .panel-icon li a, .link-logo, .link-arrow, .menu-social li a
    &:hover
      svg g
        fill $pink

  .menu li a, .footer-copyright
    color $lemon

  .menu li a:hover
    color $pink
    
  +mobile()
    nav
      background $lemon
    .link-logo
      svg g
        fill $white

  .blog:after
    background $lemon-dark

  .blog--date li
    color: $lemon-darker
    svg g
      fill $lemon-darker
