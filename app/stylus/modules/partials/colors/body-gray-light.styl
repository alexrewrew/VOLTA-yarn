.body-gray-light
  .wrapper
    background $gray-light
  .panel-icon li
    a
      svg g
        fill $gray-light
      &:hover
        svg g
          fill $pink
  .link-logo
    svg g
      fill $gray-light
    &:hover
      svg g
        fill $pink
  .menu li a
    color $gray-light
    &:hover
      color $pink
  .footer-copyright
    color $gray-light
  .link-arrow
    svg g
      fill $gray-light
    &:hover
      svg g
        fill $pink
  +mobile()
    nav
      background $gray-light
    .link-logo
      svg g
        fill $white

  .menu-social li a
    svg g
      fill $gray-light
    &:hover
      svg g
        fill $pink

  .blog:after
    background $gray-lightdark

  .blog--date li
    color: $gray-lighter
    svg g
      fill $gray-lighter
