.body-gray-darker
  .wrapper
    background $gray-darker
  .panel-icon li
    a
      svg g
        fill $gray-darker
      &:hover
        svg g
          fill $pink
  .link-logo
    svg g
      fill $gray-darker
    &:hover
      svg g
        fill $pink
  .menu li a
    color $gray-darker
    &:hover
      color $pink
  .footer-copyright
    color $gray-darker
  .link-arrow
    svg g
      fill $gray-darker
    &:hover
      svg g
        fill $pink
  +mobile()
    nav
      background $gray-darker
    .link-logo
      svg g
        fill $white

  .menu-social li a
    svg g
      fill $gray-darker
    &:hover
      svg g
        fill $pink
