.body-malina
  .wrapper
    background $malina
  .panel-icon li
    a
      svg g
        fill $malina
      &:hover
        svg g
          fill $pink
  .link-logo
    svg g
      fill $malina
    &:hover
      svg g
        fill $pink
  .menu li a
    color $malina
    &:hover
      color $pink
  .footer-copyright
    color $malina
  .link-arrow
    svg g
      fill $malina
    &:hover
      svg g
        fill $pink
  +mobile()
    nav
      background $malina
    .link-logo
      svg g
        fill $white

  .menu-social li a
    svg g
      fill $malina
    &:hover
      svg g
        fill $pink
