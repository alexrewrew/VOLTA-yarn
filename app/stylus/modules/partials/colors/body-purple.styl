.body-purple
  .wrapper
    background $purple
  .panel-icon li
    a
      svg g
        fill $purple
      &:hover
        svg g
          fill $pink
  .link-logo
    svg g
      fill $purple
    &:hover
      svg g
        fill $pink
  .menu li a
    color $purple
    &:hover
      color $pink
  .footer-copyright
    color $purple
  .link-arrow
    svg g
      fill $purple
    &:hover
      svg g
        fill $pink
  +mobile()
    nav
      background $purple
    .link-logo
      svg g
        fill $white

  .menu-social li a
    svg g
      fill $purple
    &:hover
      svg g
        fill $pink
