.body-purple-darker

  #preloader-load {
    background: #fff url('../img/logo/volta-logo8.svg') center center no-repeat;
    background-size: 197px
  }

  .wrapper
    background $purple-darker
    
  .panel-icon li a svg g, .link-logo svg g, .link-arrow svg g, .menu-social li a svg g
    fill $purple-darker

  .panel-icon li a, .link-logo, .link-arrow, .menu-social li a
    &:hover
      svg g
        fill $pink

  .menu li a, .footer-copyright
    color $purple-darker

  .menu li a:hover
    color $pink
        
  +mob()
    nav
      background $purple-darker
    .link-logo
      svg g
        fill $white

  .select-lang
    .chosen-container .chosen-single span, .chosen-container-single .chosen-drop .chosen-results .active-result
      color $purple-darker
    .chosen-container-single .chosen-drop .chosen-results .active-result.highlighted
      color $pink
    .chosen-container:after
      triangle($purple-darker, down, 5px)

body.no-canvas.body-purple-darker
  +dis()
    .wrapper
      background $purple-darker !important