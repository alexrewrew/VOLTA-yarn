.body-purple-darker
  .wrapper
    background $purple-darker
  .panel-icon li
    a
      svg g
        fill $purple-darker
      &:hover
        svg g
          fill $pink
  .link-logo
    svg g
      fill $purple-darker
    &:hover
      svg g
        fill $pink
  .menu li a
    color $purple-darker
    &:hover
      color $pink
  .footer-copyright
    color $purple-darker
  .link-arrow
    svg g
      fill $purple-darker
    &:hover
      svg g
        fill $pink
  +mobile()
    nav
      background $purple-darker
    .link-logo
      svg g
        fill $white

  .menu-social li a
    svg g
      fill $purple-darker
    &:hover
      svg g
        fill $pink