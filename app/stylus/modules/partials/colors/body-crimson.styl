.body-crimson
  .wrapper
    background $crimson
  .panel-icon li
    a
      svg g
        fill $crimson
      &:hover
        svg g
          fill $pink
  .link-logo
    svg g
      fill $crimson
    &:hover
      svg g
        fill $pink
  .menu li a
    color $crimson
    &:hover
      color $pink
  .footer-copyright
    color $crimson
  .link-arrow
    svg g
      fill $crimson
    &:hover
      svg g
        fill $pink
  +mobile()
    nav
      background $crimson
    .link-logo
      svg g
        fill $white

  .menu-social li a
    svg g
      fill $crimson
    &:hover
      svg g
        fill $pink
