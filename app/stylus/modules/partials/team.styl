.team
  position relative
  padding-bottom 10.875rem
  margin-bottom 3.875rem
  +mob()
    max-width 460px
    mcenter()
  +xxl()
    padding-bottom 11.625rem
    margin-bottom 5rem
  &--image
    height 426px
    overflow hidden
    display flex
    justify-content center
    align-items center
    +xxl()
      height 554px
      img
        height 100%
  &--description
    background $trans
    trans()
    position absolute
    bottom 0
    left -20px
    right -20px
    padding: $s37 $s30 61px
    z-index 30
    +xxl()
      padding-top 3.938rem
    &:after
      pseudo(block, absolute)
      left 0
      right 0
      top 0
      bottom 0
      background $crimson-dark
      z-index -1
      trans()
      height 0

    +port()
      background $crimson-dark
    +mob()
      background $crimson-dark
      left -15px
      right -15px
      padding-left $s15
      padding-right $s15
      padding-bottom $s25
      display flex
      flex-wrap wrap
    +land()
      padding-left $s30
      padding-right $s30
    h3
      line-height: 1.13;
      font-size $f30
      margin-bottom $s22
      position relative
      left -70px
      width calc(100% + 70px)
      +mob()
        position static
        width 100%
        margin-bottom $s12
      +xxl()
        margin-bottom $s28
        left -78px
        width calc(100% + 78px)
    &-text
      opacity 0
      trans()
      +port()
        opacity 1
      +mob()
        opacity 1
        order 2
        width 100%
      p
        margin-bottom: $s27
        +xxl()
          margin-bottom $s34
    &-prof
      color $white
      line-height: 1.44;
      font-size $f16
      +mob()
        color #ff7b7b
        margin-bottom $s37
        width 100%
      +retinanon()
        font-weight 300

  &:hover
    .team--description-text
      opacity 1
    .team--description
      &:after
        height 100%