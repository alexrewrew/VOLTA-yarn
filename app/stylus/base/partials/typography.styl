@import '../../utilities/vars'
@import '../../utilities/mixins'

::selection
  background $pink
  color $white

h1, h2, h3, h4, h5, h6, p, ul li, ol li, blockquote, cite
  font-family $m-font, $s-font, sans-serif
  color $white

h1
  font(3.125em, 500, 1.4)
  margin-bottom $s23
  position relative
  z-index 30
  +portrait()
    font-size 2.5em
  +mobile()
    font-size: 2.25em;

h2
  font(3.5em, 700, 1)
  margin-bottom $s27
  color: $purple-text;
  +mobile()
    font-size 3em

h3
  font(1.875em, 700, 1.13)
  margin-bottom $s39
  +mobile()
    font-size: 1.375em;

h4
  font($s22, 700, 1.5)
  margin-bottom $s38

h5
  font($s18, 700, 1.5)
  margin-bottom $s44

h6
  font($s14, 700, 1.5)
  margin-bottom $s50

p
  font(1em, 400, 1.44)
  margin-bottom $s30

.paragraph-lead
  font-size $s20

.paragraph-small
  font-size $s14

hr
  border: 0;
  height: 1px;
  background: $black
  margin $s15 0