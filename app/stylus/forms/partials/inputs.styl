@import '../../utilities/vars'
@import '../../utilities/mixins'

input
  -webkit-appearance none
  width 100%
  margin-bottom $s5
  background $trans
  border 0
  border-bottom 2px solid $pink-lighter
  border-radius: 0;
  padding $s5 0 $s6
  line-height 1.89
  font-size 1.125em
  color $white
  trans()
  &:-webkit-autofill
    -webkit-box-shadow: inset 0 0 0 50px #fff !important
    -webkit-text-fill-color: #999 !important
  &:focus
    outline none
    border-color $white
  +placeholder()
    color #ff86c0



input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button
  -webkit-appearance: none;
  margin: 0;

input[type=number]
  -moz-appearance:textfield;

input[type=reset]
  border 0
  cursor pointer

label
  padding-left $s16
  font-weight 700
  font-size $s16
  margin-bottom $s13

textarea
  -webkit-appearance none
  resize none
  margin-bottom $s5
  margin-top 57px
  border 0
  border-bottom 2px solid $pink-lighter
  border-radius: 0;
  width 100%
  height 41px
  padding $s5 0 $s6
  background $trans
  color $white
  font-size 1.125em
  trans()
  &:focus
    outline none
    border-color $white
  +placeholder()
    color #ff86c0

.input-group
  position relative
  margin-bottom $s20
  input
    margin-bottom 0
    padding-left 45px
    &:focus + span
      color blue
  textarea
    padding-left 45px
    margin-bottom 0
    & + span
      height 45px
    &:focus + span
      color blue
  select
    padding-left 45px
    margin-bottom 0
  span
    position absolute
    top 0
    left 0
    display flex
    justify-content center
    align-items center
    width 45px
    height 100%
    trans()
