@import '../../utilities/vars'
@import '../../utilities/mixins'

input
  -webkit-appearance none
  width 100%
  margin-bottom $s5
  border 0
  border-bottom 2px solid $pink-lighter
  border-radius: 0;
  padding $s5 0 $s6
  line-height 1.89
  font-size 1.125em
  color $white
  trans()
  background #ef2a88
  position relative
  z-index 10

  &:-webkit-autofill
    -webkit-box-shadow: inset 0 0 0 50px #fff !important
    -webkit-text-fill-color: #999 !important
  &:focus
    outline none
    border-color $white
  +placeholder()
    color #ff86c0


textarea
  -webkit-appearance none
  resize none
  margin $s50 0 $s5
  border none
  border-bottom 2px solid $pink-lighter
  border-radius: 0;
  width 100%
  height $f41
  padding $s5 0 $s6
  color $white
  font-size 1.125em
  line-height: 1.89
  trans()
  background #ef2a88
  position relative
  z-index 10
  overflow hidden
  &:focus
    outline none
    border-color $white
  +placeholder()
    color #ff86c0

.input-group, .textarea-group
  .input-shadow
    height: 17px;
    box-shadow: 0 2px 28px 0 #ae0a59;
    border-radius 50%
    position relative
    top: -16px;
    background rgba(174, 10, 89, .5)
    opacity 0
    trans()
  input, textarea
    &:focus
      & + .input-shadow
        opacity 1

.textarea-group
  .input-shadow
    top -30px