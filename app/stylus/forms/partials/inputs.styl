@import '../../utilities/vars'
@import '../../utilities/mixins'

input
  -webkit-appearance none
  width 100%
  margin-bottom $s9
  border 0
  border-bottom 2px solid $pink-place
  border-radius: 0;
  padding $s5 0 $s6
  line-height 1.89
  font-size 1.125em
  color $white
  trans()
  background $pink-dark
  position relative
  z-index 10

  &:-webkit-autofill
    -webkit-box-shadow: inset 0 0 0 50px #fff !important
    -webkit-text-fill-color: #999 !important
  &:focus
    outline none
    border-color $white
  +placeholder()
    color $pink-place
  +retinanon()
    font-weight 300


textarea
  -webkit-appearance none
  resize none
  //margin $s50 0 $s5
  border none
  border-bottom 2px solid $pink-place
  border-radius: 0;
  width 100%
  //height $f41
  max-height 149px
  padding $s5 0 $s6
  color $white
  font-size 1.125em
  line-height: 1.89
  trans()
  background $pink-dark
  position relative
  z-index 10
  overflow hidden
  &:focus
    outline none
    border-color $white
  +placeholder()
    color $pink-place
  +retinanon()
    font-weight 300

.input-group, .textarea-group
  .input-shadow
    height: 17px;
    box-shadow: 0 2px 28px 0 #af0054;
    border-radius 50%
    position relative
    top: -22px;
    background rgba(175, 0, 84, .5)
    opacity 0
    width 85%
    margin 0 auto
    trans()
  input, textarea
    &:focus
      & + .input-shadow
        opacity 1

.textarea-group
  .input-shadow
    top -30px