@import '../../utilities/vars'
@import '../../utilities/mixins'

input[disabled], textarea[disabled]
  background #e5e5e5
  border-color #e5e5e5
  +placeholder()
    opacity .5

input.error, textarea.error
  color $pink-darkest
  border-bottom-color $pink-darkest
  +placeholder()
    color $pink-darkest

input.success, textarea.success
  color $green
  border-color $green
  +placeholder()
    color $green

.select-group.error
  select
    border-color $pink-darkest
    color $pink-darkest
  .chosen-container
    .chosen-default
      span
        color $pink-darkest
  .chosen-container .chosen-single
    border-color $pink-darkest

.select-group.success
  select
    border-color $green
    color $green
  &:after
    triangle($green, down, 5px)

.select-group.disabled
  select
    border-color #e5e5e5
    color rgba(153,153,153,.5)
  &:after
    triangle(#999, down, 5px)