.form-hire
  max-width 556px
  width 100%
  display flex
  justify-content space-between
  flex-wrap wrap
  .input-group
    flex 1 1 calc(50% - 15px)
    max-width calc(50% - 15px)
    +mob()
      flex 1 1 100% !important
      max-width 100% !important
    +land()
      flex 1 1 calc(50% - 15px)
      max-width calc(50% - 15px)
  .select-group, .form-submit, .textarea-group
    flex 1 1 100%
    max-width 100%
  +xxl()
    max-width 722px

.form-contactus
  textarea
    margin-top $s27
  input, textarea
    border-bottom-color: #774dab
    background $purple-darkest
    +placeholder()
      color #774dab
  input.error, textarea.error
    color #ff1182
    border-bottom-color #ff1182
    +placeholder()
      color #ff1182

  .input-group, .textarea-group
    .input-shadow
      box-shadow: 0 2px 28px 0 #5e14bc;
      background rgba(94, 20, 188, .5)
