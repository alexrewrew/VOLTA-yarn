@import '../../utilities/vars'
@import '../../utilities/mixins'

header
  position relative
  z-index 40

.header-index
  padding-top 103px
  margin-bottom 194px
  +mobile()
    padding-top 121px
    margin-bottom: 130px;

.header-regular
  padding 32px 38px
  min-height 332px
  +mobile()
    min-height 300px
    padding-left 0
    padding-right 0
  h1
    text-transform uppercase
    letter-spacing: 10px;
    text-align center
    margin-top 52px
    margin-bottom 0
    line-height 1.3
  p
    text-align center
    font-size $f14