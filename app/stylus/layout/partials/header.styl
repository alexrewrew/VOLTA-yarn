@import '../../utilities/vars'
@import '../../utilities/mixins'

header
  position relative
  z-index 40

.header-index
  padding-top 6.438rem
  margin-bottom 12.125rem
  +mobile()
    padding-top 4.375rem
    margin-bottom: 8.125rem

.header-regular
  padding $s32 $s38
  min-height 332px
  +mobile()
    min-height unset
    padding 0 0 $s32
  h1
    text-transform uppercase
    letter-spacing: 10px;
    text-align center
    margin-top 3.250rem
    margin-bottom 0
    line-height 1.3
    +mobile()
      margin-top $s20
  p
    text-align center
    font-size $f14

.header-blogin
  min-height 275px
  +mobile()
    min-height unset
  h1
    color $gray-lightdark
    font-size: $f24
    letter-spacing: 3.4px;
    font-weight 700
    margin-top: 5.813rem
    line-height: 1.42;
    +mobile()
      margin-top $s30
      font-size $f20
      text-align left
      line-height: 1.6;
      margin-bottom $s10

.header-contacts
  min-height 258px
  +mobile()
    min-height auto
    h1
      margin-bottom $s30
