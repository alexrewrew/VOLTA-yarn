@import '../../utilities/vars'
@import '../../utilities/mixins'

section
  padding-bottom 227px
  +mobile()
    padding-bottom: 130px;

article
  img
    width 100%
    margin-bottom $s30
  iframe
    width 100%
    margin-bottom $s30
    height 400px
    +mobile()
      height 300px
  p
    line-height: 1.63;
    color: $gray-lightdark
    margin-bottom $s26
  a
    display inline-block
    border-bottom 2px solid $pink
    line-height 1.2
    font-weight 700
  ul
    display flex
    flex-flow wrap column
    padding-top 3px
    padding-bottom 3px
    margin-bottom 80px
    li
      position relative
      padding-left $s34
      padding-right $s15
      margin-bottom $s6
      color $gray-lightdark
      line-height: 1.63;
      &:before
        pseudo(block, absolute)
        width 14px
        height 2px
        top 10px
        left 0
        background $pink-light

aside {}

main
  padding 50px 50px 0 50px
  position relative
  overflow-y hidden
  overflow-x hidden
  height 100%
  z-index 0
  +mobile()
    padding 33px 0 0

address {}

canvas
  z-index: 1; position: absolute; top:0px; left: 0px;

.wrapper
  position relative
  z-index 3
  padding-bottom 0
  background transparent
  margin-bottom 0

.content
  +custom-min(1920px)
    margin-left: auto;
    margin-right: auto;
    max-width: 1920px;


.section-last
  padding-bottom 83px

.section-portfolio
  padding-bottom 103px

.section-blog
  padding-bottom 8px

.section-filter
  padding-bottom 153px
  +mobile()
    padding-bottom: 110px
