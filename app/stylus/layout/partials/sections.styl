@import '../../utilities/vars'
@import '../../utilities/mixins'

section
  padding-bottom 14.188rem
  +mobile()
    padding-bottom: 8.125rem

article
  img
    width 100%
    margin-bottom $s30
  iframe
    width 100%
    margin-bottom $s30
    height 400px
    +mobile()
      height 300px
  p
    line-height: 1.63;
    color: $gray-lightdark
    margin-bottom $s26
  a
    display inline-block
    border-bottom 2px solid $pink
    line-height 1.2
    font-weight 700
  ul, ol
    display flex
    flex-flow wrap column
    padding $s3 0
    margin-bottom 5.000rem
    li
      position relative
      padding-left $s34
      padding-right $s15
      margin-bottom $s6
      color $gray-lightdark
      line-height: 1.63;
      left 0
      +mobile()
        padding-right 0
      &:before
        position absolute
        display block
        left 0

      ul, ol
        margin $s4 0 0
        padding-bottom 0
        li
          &:last-child
            margin-bottom 0

  ul
    li
      &:before
        content ''
        width 14px
        height 2px
        top 10px
        background $pink-light
  ol
    counter-reset: item
    li
      &:before
        top 0
        content: counter(item) ". ";
        counter-increment: item;
        color: $pink-light
        font-family $sl-font, $s-font, sans-serif

main
  padding $s50 $s50 0 $s50
  position relative
  overflow-y hidden
  overflow-x hidden
  height 100%
  z-index 0
  +mobile()
    padding 3.313rem 0 0

canvas
  z-index: 1;
  position: absolute;
  top: 0px;
  left: 0px;
  bottom 0
  right 0
  display: none
  +displays()
    display block

.wrapper
  position relative
  z-index 3
  padding-bottom 0
  background $trans

.content
  margin-bottom 0

.section-last
  padding-bottom 4.813rem

.section-slider
  padding-bottom: 11.438rem
  +mobile()
    padding-bottom 6.750rem

.section-portfolio
  padding-bottom 6.438rem
  +mobile()
    padding-bottom $s3

.section-blog
  padding-bottom $s8

.section-filter
  padding-bottom 10.188rem
  +mobile()
    padding-bottom: 4.375rem
