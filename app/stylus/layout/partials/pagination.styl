@import '../../utilities/vars'
@import '../../utilities/mixins'

.pagination
  df(row)
  justify-content center
  margin 0 auto $s49
  li
    margin 0 $s15
    a
      display inline-block
      color $white
      font-size $s18
      font-family $sl-font, $s-font, sans-serif
      border-bottom 3px solid $trans
      padding $s5 0
      &:hover
        color $pink
        border-bottom-color $pink
    .arrow
      df(row)
      justify-content center
      height 100%
      border 0
      padding $s3 0
      &:hover
        opacity .5
    .active
      color #868686
      cursor default
      pointer-events: none;